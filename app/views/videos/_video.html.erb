<%
#locals
video ||= wall
video ||= @video
%>

<div id='<%= dom_id video %>' class="left">
  <div class="image left small_down_image">
    <div>
      <a href="<%= profile_video_path(video.profile, video) %>" title="<%= video.name %>" alt="<%= video.name %>" rel="user_gallery">
        <%= image_tag video.thumbnail, :alt => video.name %>
      </a>
    </div>
    <%= link_to_remote '(delete)', :update => dom_id(video), :url => profile_video_path(video.profile, video), :method => :delete, :confirm => "Are you sure?", :complete => visual_effect(:blind_up, dom_id(video), :duration => 1.0) if me %>
  </div>
</div>
